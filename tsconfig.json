{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,

    /* Library mode */
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Alias */
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["packages/hooks/*"],
      "@utils/*": ["packages/utils/*"]
    }
  },
  "include": ["packages"],
  "exclude": ["node_modules", "packages/**/*.test.ts", "packages/**/*.test.tsx"]
}
